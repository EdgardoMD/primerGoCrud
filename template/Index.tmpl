{{ define "Index" }}
  {{ template "Header" }}
    {{ template "Menu"  }}
    <h2> Registros</h2>
    <table border="1">
      <thead>
      <tr>
        <td>ID</td>
        <td>Nombre</td>
        <td>Apellido</td>
        <td>Ciudad</td>
        <td>Ver</td>
        <td>Editar</td>
        <td>Eliminar</td>
      </tr>
       </thead>
       <tbody>
    {{ range . }}
      <tr>
        <td>{{ .Id }}</td>
        <td> {{ .Nombre }} </td>
        <td> {{ .Apellido }} </td>
        <td>{{ .Ciudad }} </td>
        <td><a href="/mostrar?id={{ .Id }}">Ver</a></td>
        <td><a href="/#">Editar</a></td>
        <td><a href="/#">Borrar</a><td>
      </tr>
    {{ end }}
       </tbody>
    </table>
  {{ template "Footer" }}
{{ end }}